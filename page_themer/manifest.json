{
    "name": "Page Themer",
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "images/icon-32.png"
    },
    "manifest_version": 3,
    "version": "0.1",
    "description": "A page theming tool.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png"
    }
}